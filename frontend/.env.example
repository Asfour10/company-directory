# =============================================================================
# COMPANY DIRECTORY - FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit .env files to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application Environment
NODE_ENV=development
VITE_APP_NAME=Company Directory
VITE_APP_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# WebSocket URL (if using real-time features)
VITE_WS_URL=ws://localhost:3000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# SSO Configuration
VITE_SSO_ENABLED=true
VITE_AZURE_AD_ENABLED=true
VITE_GOOGLE_OAUTH_ENABLED=true
VITE_OKTA_ENABLED=true
VITE_JUMPCLOUD_ENABLED=false

# Session Configuration
VITE_SESSION_TIMEOUT=28800000
VITE_SESSION_WARNING_TIME=300000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles for frontend
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CUSTOM_FIELDS=true
VITE_FEATURE_BULK_IMPORT=true
VITE_FEATURE_ORG_CHART=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_DARK_MODE=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# File Upload
VITE_MAX_FILE_SIZE=2097152
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Search Configuration
VITE_SEARCH_DEBOUNCE_MS=300
VITE_SEARCH_MIN_CHARS=2

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Caching
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000

# Lazy Loading
VITE_LAZY_LOADING_ENABLED=true
VITE_VIRTUAL_SCROLLING_ENABLED=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Error Tracking (Sentry, etc.)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# Analytics (Google Analytics, etc.)
VITE_GA_TRACKING_ID=
VITE_ANALYTICS_ENABLED=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development flags
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=true
VITE_MOCK_API=false

# Hot Module Replacement
VITE_HMR_PORT=5173
VITE_HMR_HOST=localhost

# =============================================================================
# BRANDING CONFIGURATION
# =============================================================================
# Default branding (can be overridden by tenant settings)
VITE_DEFAULT_BRAND_COLOR=#3B82F6
VITE_DEFAULT_ACCENT_COLOR=#1D4ED8
VITE_DEFAULT_LOGO_URL=/logo.png

# =============================================================================
# ACCESSIBILITY CONFIGURATION
# =============================================================================
# Accessibility features
VITE_HIGH_CONTRAST_MODE=false
VITE_REDUCED_MOTION=false
VITE_SCREEN_READER_SUPPORT=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_URI=

# HTTPS Configuration
VITE_HTTPS_ENABLED=false
VITE_HTTPS_PORT=5174