{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitThis": false
  },
  "include": [
    "src/index.ts",
    "src/lib/*.ts",
    "src/middleware/*.ts",
    "src/repositories/*.ts",
    "src/routes/*.ts",
    "src/services/*.ts",
    "src/types/*.ts",
    "src/utils/errors.ts",
    "src/validators/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/services/scim.service.ts",
    "src/services/scim-mapping.service.ts",
    "src/services/sso.service.ts",
    "src/routes/scim.routes.ts",
    "src/middleware/scim-auth.middleware.ts",
    "src/types/scim.types.ts",
    "src/services/encryption-key.service.ts",
    "src/services/database-encryption.service.ts",
    "src/services/employee-encryption.service.ts",
    "src/services/field-encryption.service.ts",
    "src/middleware/encryption.middleware.ts"
  ]
}
