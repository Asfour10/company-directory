# Database Encryption Configuration
DB_ENCRYPTION_ENABLED=true
DB_ENCRYPTION_ALGORITHM=AES-256
DB_KEY_ROTATION_DAYS=90

# SSL/TLS Configuration for Database
DB_SSL_CERT=path/to/client-cert.pem
DB_SSL_KEY=path/to/client-key.pem
DB_SSL_ROOT_CERT=path/to/ca-cert.pem
DB_SSL_CA=path/to/ca-cert.pem

# HTTPS/TLS Configuration for API Server
SSL_KEY_PATH=path/to/server-key.pem
SSL_CERT_PATH=path/to/server-cert.pem
SSL_CA_PATH=path/to/ca-cert.pem
HTTPS_PORT=3443
ENFORCE_HTTPS=true

# Encryption Key Management
ENCRYPTION_PROVIDER=local  # Options: aws, azure, local
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your-kms-key-id
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
AZURE_KEY_NAME=your-key-name

# Backup Encryption
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# PostgreSQL with SSL (example)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname?sslmode=require&sslcert=client-cert.pem&sslkey=client-key.pem&sslrootcert=ca-cert.pem